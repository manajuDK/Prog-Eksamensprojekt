<label for="Name">Name:</label>
<input type="text" name="Name" @bind="name" @bind:after="SaveName"/>
<label for="Balance">Starting Balance:</label>
<input type="number" name="Balance" @bind="balance" @bind:after="SaveBalance"/>

@code {
	[Parameter]
	int index;

	private string name;
	private int balance;

	private void SaveName ()
	{
		GlobalInfo.userList[index].name = name;
	}
	private void SaveBalance ()
	{
		GlobalInfo.userList[index].startBalance = balance;
	}
}
